<%- include('partials/header.ejs') -%>

<div class="ui text main container segment">
    <div class="ui huge form header">Edit <%= blog.title %></div>
    <div class="ui">
    <form class="ui form three fields" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label for="">Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label for="">Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label for="">Body Content</label>
            <textarea name="blog[body]" id="" cols="30" rows="10"><%= blog.body %></textarea>
        </div>
        <div class="field">
            <input class="ui medium inverted primary button" type="submit">
        </div>        
    </form>
    </div>
    
</div>


<%- include('partials/footer.ejs') -%>