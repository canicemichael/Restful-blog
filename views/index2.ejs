<%- include("partials/header.ejs") -%>

<div class="ui main text container">
    <div class="ui huge header">THE Bottles</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% bottles.forEach(function(bottle){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= bottle.image %>">
                    </div>
                    <div class="content">
                        <a class="header" href="/bottles/<%= bottle._id %>"><%= bottle.title %></a>
                        <div class="meta">
                            <span><%= bottle.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%= bottle.description %></p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/bottles/<%= bottle._id %>">
                                Read More
                                <i class="chevron right icon"></i>
                            </a>
                        </div>
                    </div>                    
                    
                </div>    
            <% }) %>
        </div>
    </div>
</div>


<%- include("partials/footer.ejs")  -%>